{
  "rootDir": "./",
  "baseUrl": "./",
  "typeRoots": [
    "@types/node",
    "./src/types"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "incremental": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@prisma": ["src/db/prisma.service"],
      "@services/*": ["src/modules/common/services/*"],
      "@modules/*": ["src/modules"]
    }
  }
}